<div>
  <p class="text-sm text-gray-500">
      <time datetime="{{ post.date | date: "%Y-%m-%d" }}">
      {% assign d = post.date | date: "%-d" %}
      {{ post.date | date: "%B" }}
      {% case d %}
      {% when '1' or '21' or '31' %}{{ d }}st,
      {% when '2' or '22' %}{{ d }}nd,
      {% when '3' or '23' %}{{ d }}rd,
      {% else %}{{ d }}th,
      {% endcase %}
      {{ post.date | date: "%Y" }}
    </time>
  </p>
  <a href="#" class="mt-2 block">
    <p class="text-xl font-semibold text-gray-900">
      {{post.title}}
    </p>
    <p class="mt-3 text-base text-gray-500">
      {{post.description}}
    </p>
  </a>
  <div class="mt-3">
    <a href="{{ post.url }}" class="text-base font-semibold text-sky-600 hover:text-sky-500">
      Read full story
    </a>
  </div>
</div>
